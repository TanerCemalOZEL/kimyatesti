
@{
    ViewBag.Title = "Index";
}

<h2>Home index</h2>

<hr />

@if (User.Identity.IsAuthenticated)
{
    <label class="label label-info">
        @User.Identity.Name
    </label>
    <a href="/Account/Logout" class="btn btn-danger">Çıkış yap</a>
}
else
{
    <a href="/Account/Login" class="btn btn-success">Giriş yap</a>
    <a href="/Account/Register" class="btn btn-primary">Kaydol</a>

}