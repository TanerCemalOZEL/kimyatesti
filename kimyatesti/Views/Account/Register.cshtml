@model kimyatesti.Models.Register
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<hr />
@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Kullanıcı adı</label>
        @Html.TextBoxFor(i => i.Username, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(i => i.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Parola</label>
        @Html.TextBoxFor(i => i.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Ad</label>
        @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Soyad</label>
        @Html.TextBoxFor(i => i.Surname, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
}